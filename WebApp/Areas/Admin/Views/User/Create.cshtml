@model WebApp.Areas.Admin.Models.UserModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>UserModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AccountName" class="control-label"></label>
                <input asp-for="AccountName" class="form-control" />
                <span asp-validation-for="AccountName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountPassword" class="control-label"></label>
                <input asp-for="AccountPassword" class="form-control" />
                <span asp-validation-for="AccountPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdRoles" class="control-label"></label>
                <select asp-for="IdRoles" class="form-control" asp-items="ViewBag.IdRoles"></select>
            </div>
            <div class="custom-control">
                <label class="custom-file-label"></label>
                <input type="file" id="ful" name="ful" class="custom-file-input" />
            </div>
            <div class="form-group">
                <img src="~/Img//User" class="w-75" id="imgPres" alt="Img" aceept="*.JPG|*.PNG" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section JS{
    <script>
        $("#ful").change(function () {
            readURL(this, '#imgPres');
        });
    </script>
}

