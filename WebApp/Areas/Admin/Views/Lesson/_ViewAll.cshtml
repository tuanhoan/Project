@model IEnumerable<WebApp.Areas.Admin.Models.LessonModel>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a class="btn btn-success" onclick="showInPopup('@Url.Action("AddOrEdit","Lesson",null,Context.Request.Scheme)','Thêm mới Lesson')">Tạo mới lesson</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LessonName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Video)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Coach)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="overflow-auto">
        @foreach (var item in Model)
        {
            <tr>
                <td class="col-sm-2">
                    @Html.DisplayFor(modelItem => item.LessonName)
                </td>
                <td class="col-sm-2">
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td class="col-sm-2">
                    @Html.DisplayFor(modelItem => item.Video)
                </td>
                <td class="col-sm-2">
                    @Html.Raw(item.Content)
                </td>
                <td class="col-sm-2">
                    @Html.DisplayFor(modelItem => item.Description)
                </td class="col-sm-2">
                <td class="col-sm-2">
                    @Html.DisplayFor(modelItem => item.Course.Description)
                </td>
                <td class="col-sm-2">
                    @Html.DisplayFor(modelItem => item.Coach.Address)
                </td>
                <td>
                    <a class="btn btn-warning" onclick="showInPopup('@Url.Action("AddOrEdit","Lesson", new {id= item.Id },Context.Request.Scheme)','Chỉnh sửa Lesson')">Chỉnh sửa</a> |
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Chi tiết</a> |
                    <form asp-action="Delete" asp-route-id="@item.Id" onsubmit="return jQueryAjaxDelete(this)" class="d-inline">
                        <input type="hidden" asp-for="@item.Id" />
                        <input type="submit" value="Xóa" class="btn btn-danger" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

